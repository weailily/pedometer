<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context = "com.example.pedometer.MainActivity"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp">
        <!--android:background="@mipmap/step_bg"-->

        <TextView
            android:id="@+id/look_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/home_statistical"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/look_data"
            android:textColor="#333333"/>


        <TextView
            android:id="@+id/plan_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/look_data"
            android:drawableLeft="@drawable/home_question_mark"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/plan_set"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/step_count"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:padding="8dp"
            tools:text ="100"
            />
    </RelativeLayout>
</RelativeLayout>
